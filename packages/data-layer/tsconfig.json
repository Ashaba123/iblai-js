{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@data-layer/*": ["./src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "tests/**/*", "setupTests.ts"],
  "exclude": ["node_modules", "dist"]
}

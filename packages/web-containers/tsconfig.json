{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018", "dom", "ESNext"],
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "..",
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@web-containers/*": ["./src/*"],
      "@iblai/data-layer": ["../data-layer/src"],
      "@data-layer/*": ["../data-layer/src/*"],
      "@iblai/web-utils": ["../web-utils/src"],
      "@web-utils/*": ["../web-utils/src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "setupTests.ts"],
  "exclude": ["node_modules", "dist", "tests", "setupTests.ts"],
  "references": [{ "path": "../data-layer" }, { "path": "../web-utils" }]
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018", "dom", "ESNext"],
    "declaration": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "..",
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "@web-utils/*": ["./src/*"],
      "@iblai/data-layer": ["../data-layer/src"],
      "@data-layer/*": ["../data-layer/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "setupTests.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../data-layer" }]
}
